<!DOCTYPE html>
<html ng-app='scaffold'>
    <head>
        <link href="/static/lib/angular-material/angular-material.css" rel="stylesheet" type="text/css" />
        <link href="/static/style/app.css" rel="stylesheet" type="text/css" />
        <base href="/" />

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    </head>
    <body layout="row">
        <md-sidenav md-is-locked-open="$mdMedia('gt-sm')"
            md-component-id="nav"
            class="md-sidenav-left md-whiteframe-z2"
            style="height: 100vh;" >

            <md-toolbar>
                <md-button></md-button>
            </md-toolbar>

            <md-content>
                <md-button class="md-warn" href="/">Home</md-button>
                <md-button class="md-warn" href="/job">Create Job</md-button>
                <md-button class="md-warn" href="/search">Search jobs</md-button>
                <md-divider></md-divider>
                <md-button ng-if="profile.$loggedIn" href="/auth/logout" target="_self">logout</md-button>
            </md-content>
        </md-sidenav>

        <div  style="z-index: 0;" id="main" layout="column" flex>
            <md-toolbar layout="row" layout-align="space-between center">
                <md-button ng-click="toggleNav()">
                    Toggle
                </md-button>
            </md-toolbar>
            <main ng-view layout="column" flex>

            </main>
        </div>

        <script>
            window.__user = <%- user ? JSON.stringify(user) : 'null' %>;
        </script>

        <script type="text/javascript" src="/static/lib/angular/angular.js"></script>
        <script type="text/javascript" src="/static/lib/angular-animate/angular-animate.js"></script>
        <script type="text/javascript" src="/static/lib/angular-aria/angular-aria.js"></script>
        <script type="text/javascript" src="/static/lib/angular-material/angular-material.js"></script>
        <script type="text/javascript" src="/static/lib/angular-resource/angular-resource.js"></script>
        <script type="text/javascript" src="/static/lib/angular-route/angular-route.js"></script>
        <script type="text/javascript" src="/static/lib/moment/moment.js"></script>

        <script type="text/javascript" src="/static/script/app.js"></script>
        <script type="text/javascript" src="/static/script/models/job.js"></script>
        <script type="text/javascript" src="/static/script/models/user.js"></script>
        <script type="text/javascript" src="/static/script/models/profile.js"></script>
        <script type="text/javascript" src="/static/script/models/application.js"></script>
        <script type="text/javascript" src="/static/script/services/resolve.js"></script>
        <script type="text/javascript" src="/static/script/services/upload-cache.js"></script>
        <script type="text/javascript" src="/static/script/routes/edit-user.js"></script>
        <script type="text/javascript" src="/static/script/routes/index.js"></script>
        <script type="text/javascript" src="/static/script/routes/modify-job.js"></script>
        <script type="text/javascript" src="/static/script/routes/review-user.js"></script>
        <script type="text/javascript" src="/static/script/routes/search.js"></script>
        <script type="text/javascript" src="/static/script/routes/signup.js"></script>
        <script type="text/javascript" src="/static/script/routes/view-job.js"></script>
        <script type="text/javascript" src="/static/script/routes/view-user.js"></script>
        <script type="text/javascript" src="/static/script/routes/apply-job.js"></script>
        <script type="text/javascript" src="/static/script/routes/view-applications.js"></script>
        <script type="text/javascript" src="/static/script/routes/view-application.js"></script>
        <script type="text/javascript" src="/static/script/directives/list-item.js"></script>
        <script type="text/javascript" src="/static/script/directives/app-item.js"></script>
        <script type="text/javascript" src="/static/script/directives/icon.js"></script>
        <script type="text/javascript" src="/static/script/directives/user-details.js"></script>
        <script type="text/javascript" src="/static/script/directives/image-upload.js"></script>

    </body>
</html>
